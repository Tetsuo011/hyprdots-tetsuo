@import "~/.config/rofi/config.rasi"

configuration {
  show-icons: true;
  transparency: "real";
  modi: "drun";
}

/* ---- Window ---- */
window {
  width: 50%;
  padding: 30px;
  transparency: "real";
  background-color: rgba(20, 20, 20, 0.3);
  border: 0px;
  border-radius: 0px;
}

/* ---- Mainbox ---- */
mainbox {
  children: [ "inputbar", "listview" ];
  spacing: 20px;
  background-color: transparent;
}

/* ---- Inputbar ---- */
inputbar {
  background-color: rgba(0, 0, 0, 0.2);
  text-color: #ffffff;
  padding: 10px;
  border-radius: 0px;
  margin: 10px 0px;
}

/* ---- Entry ---- */ 
entry {
  expand: true;
  placeholder: " ïŒƒ Choose Waybar Layout";
  text-color: #ffffff;
  horizontal-align: 0.5;
}

/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 4;
  fixed-height: false;
  margin: 10px;
  scrollbar: false;
  spacing: 6px;
  cycle: true;
  background-color: transparent;
}

/* ---- Elements ---- */
element {
  orientation: horizontal;
  padding: 10px;
  background-color: transparent;
}

element-icon {
  size: 0%;
}

element-text {
  horizontal-align: 0.0;
  text-color: #ffffff;
  font: "JetBrainsMono Nerd Font 10";
}

