@import "~/.config/rofi/config.rasi"

configuration {
  modi: "drun";
  transparency: "real";
}

window {
  width: inherit;
  height: inherit;
  transparency: "real";
  background-color: rgba(20, 20, 20, 0.3);
  border: 0px;
  border-radius: 0px;
  padding: 30px;
}

mainbox {
  children: [ "inputbar", "listview" ];
  spacing: 20px;
  background-color: transparent;
}

inputbar {
  background-color: rgba(0, 0, 0, 0.2);
  text-color: #ffffff;
  padding: 10px;
  border-radius: 0px;
  margin: 10px 0px;
}

entry {
  expand: true;
  placeholder: " ïŒƒ Choose Waybar Style";
  text-color: #ffffff;
  horizontal-align: 0.5;
}

listview {
  columns: 1;
  lines: 4;
  fixed-height: false;
  margin: 10px;
  scrollbar: false;
  spacing: 6px;
  cycle: true;
  background-color: transparent;
}

/* ---- Elements ---- */
element {
  orientation: horizontal;
  padding: 10px;
  background-color: transparent;
}

element-icon {
  size: 0%;
}

element-text {
  horizontal-align: 0.0;
  text-color: #ffffff;
  font: "JetBrainsMono Nerd Font 10";
}

